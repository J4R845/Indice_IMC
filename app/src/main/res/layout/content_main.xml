<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary"
    tools:showIn="@layout/activity_main">

    <!-- Layout para adicionar os dados de culcular o IMC -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="64dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:textAlignment="textEnd"
            android:text="Peso" />

        <EditText
            android:id="@+id/editPeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Digite O Peso"
            android:paddingLeft="2dp"
            android:layout_weight="0"
            android:textSize="14dp"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:background="@color/colorPrimaryEditText"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textColor="@color/colorWhite"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:text="Kg" />

    </LinearLayout>
    <!-- Layout para adicionar os dados de culcular o IMC -->

    <!-- Inicio do Layout adicionar dados 2-->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="64dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:text="Altura"
            android:textAlignment="textEnd"
            android:textColor="@color/colorWhite" />

        <EditText
            android:id="@+id/editAltura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/colorPrimaryEditText"
            android:ems="10"
            android:hint="Digite A Altura"
            android:inputType="numberDecimal"
            android:textColor="@color/colorWhite"
            android:paddingLeft="2dp"
            android:textAlignment="center"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="Mts"
            android:textAlignment="textStart"
            android:textColor="@color/colorWhite" />

    </LinearLayout>
    <!-- Fim do Layout Adicionar dados  -->

    <!-- Inicio do Layout do resultado do Índice IMC -->
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:text="Índice IMC"
            android:textAlignment="textEnd"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/txtResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="24.65"
            android:textColor="@color/colorWhite" />

    </LinearLayout>
    <!-- Fim do Layout do resultado do Índice IMC -->

    <!-- Inicio do Layout do resultado do Diagnostico -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Diagnóstico"
            android:textAlignment="center"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/txtDiagnostico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Resultado Diagnostico"
            android:textAlignment="center"
            android:textColor="@color/colorWhite" />

    </LinearLayout>
    <!-- Fim do Layout do resultado do Diagnostico -->

    <!-- Inicio do Layout dos Botões -->
    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="96dp"
        android:autoSizeTextType="uniform"
        android:text=" Abaixo de        17,00  > Muito Abaixo do Peso \n
Entre 17,00  e  18,49 > Abaixo do Peso \n
Entre 18,50  e  24,99 > Peso Ideal \n
Entre 25,00  e  29,99 > Acima do Peso \n
Entre 30,00  e  39,99 > Obesidade (Grau II) \n
Acima de          40,00 > Obesidade Grave (Grau III)"
        android:textAlignment="textStart"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <!-- Fim do Layout dos Botões -->

</androidx.constraintlayout.widget.ConstraintLayout>